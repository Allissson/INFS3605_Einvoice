<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="60dp"
        android:text="Log In"
        android:textColor="#575DFB"
        android:textFontWeight="700"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/email"
        android:layout_width="343dp"
        android:layout_height="56dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/login_border"
        android:hint="    Ex: abc@example.com"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/passsword"
        android:layout_width="343dp"
        android:layout_height="56dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/login_border"
        android:hint="   *****"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="153dp"
        android:layout_height="142dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="Register"
        android:textColor="@color/purple"
        android:textFontWeight="700"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <Button
        android:id="@+id/logIn"
        android:layout_width="343dp"
        android:layout_height="56dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_button"
        android:capitalize="none"
        android:text="Login"
        android:textColorLink="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgetPass" />

    <Button
        android:id="@+id/forgetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-3dp"
        android:background="@color/transparent"
        android:fontFamily="@font/inter"
        android:text="Forget Password"
        android:textColor="@color/purple"
        android:gravity="left|center_vertical"
        android:textFontWeight="400"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/passsword"
        app:layout_constraintTop_toBottomOf="@+id/passsword" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="286dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter"
        android:text="Login now to track all your expenses and income at a place!"
        android:textColor="#000000"
        android:textFontWeight="400"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="40dp"
        android:layout_height="24dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/inter"
        android:text="Email"
        android:textColor="#000000"
        android:textFontWeight="400"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/user_email"
        app:layout_constraintTop_toBottomOf="@+id/user_email" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/inter"
        android:text="Password"
        android:textColor="@color/black"
        android:textFontWeight="400"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/inter"
        android:text="Donâ€™t have an account?"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/logIn"
        app:layout_constraintTop_toBottomOf="@+id/google_login" />

    <Button
        android:id="@+id/google_login"
        android:layout_width="343dp"
        android:layout_height="56dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/google_button"
        android:text="Continue with Google"
        android:textColor="@color/black"
        android:textFontWeight="700"
        app:layout_constraintEnd_toEndOf="@+id/logIn"
        app:layout_constraintStart_toStartOf="@+id/logIn"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <View
        android:id="@+id/divider"
        android:layout_width="343dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/logIn"
        app:layout_constraintStart_toStartOf="@+id/logIn"
        app:layout_constraintTop_toBottomOf="@+id/logIn" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/google_login"
        app:layout_constraintStart_toStartOf="@+id/google_login"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logo_google" />


</androidx.constraintlayout.widget.ConstraintLayout>