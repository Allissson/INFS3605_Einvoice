<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    tools:context=".ui.account.AccountFragment">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="757dp"
        android:layout_height="194dp"
        android:layout_marginTop="-1dp"
        android:src="@drawable/profile_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="115dp"
        android:layout_height="121dp"
        android:layout_marginTop="85dp"
        app:layout_constraintEnd_toEndOf="@+id/id_progress"
        app:layout_constraintStart_toStartOf="@+id/id_progress"
        app:layout_constraintTop_toTopOf="@+id/id_progress"
        app:lottie_rawRes="@raw/lf30_editor_x7d4rxys" />

    <TextView
        android:id="@+id/account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text=" "
        android:textFontWeight="800"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="@+id/textView31"
        app:layout_constraintTop_toBottomOf="@+id/textView31" />

    <TextView
        android:id="@+id/profile_hint"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:gravity="center"
        android:text=" "
        android:textFontWeight="500"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/leave4"
        app:layout_constraintTop_toBottomOf="@+id/account_text" />

    <ProgressBar
        android:id="@+id/id_progress"
        android:layout_width="275dp"
        android:layout_height="309dp"
        android:layout_marginTop="-18dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/progress_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leave1"
        tools:progress="40" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="67dp"
        android:fontFamily="@font/inter"
        android:text="@string/profile_welcome"
        android:textSize="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/profile_hint"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter"
        android:text="0/200"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/id_progress"
        app:layout_constraintStart_toStartOf="@+id/id_progress"
        app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView" />

    <Button
        android:id="@+id/profile_upload"
        android:layout_width="130dp"
        android:layout_height="43dp"
        android:text="@string/profile_upload"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_hint"
        app:layout_constraintStart_toStartOf="@+id/profile_hint"
        app:layout_constraintTop_toBottomOf="@+id/profile_hint" />

    <ImageView
        android:id="@+id/leave1"
        android:layout_width="41dp"
        android:layout_height="44dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/leave_greey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/leave2"
        android:layout_width="41dp"
        android:layout_height="44dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/leave_greey"
        app:layout_constraintBottom_toBottomOf="@+id/leave1"
        app:layout_constraintStart_toEndOf="@+id/leave1"
        app:layout_constraintTop_toTopOf="@+id/leave1" />

    <ImageView
        android:id="@+id/leave3"
        android:layout_width="41dp"
        android:layout_height="44dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/leave_greey"
        app:layout_constraintBottom_toBottomOf="@+id/leave2"
        app:layout_constraintStart_toEndOf="@+id/leave2"
        app:layout_constraintTop_toTopOf="@+id/leave2" />

    <ImageView
        android:id="@+id/leave4"
        android:layout_width="41dp"
        android:layout_height="44dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/leave_greey"
        app:layout_constraintBottom_toBottomOf="@+id/leave3"
        app:layout_constraintStart_toEndOf="@+id/leave3"
        app:layout_constraintTop_toTopOf="@+id/leave3" />


    <ProgressBar
        android:id="@+id/profileProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="197dp"
        android:layout_height="235dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="97dp"
        android:layout_height="101dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/profile1"
        app:layout_constraintEnd_toEndOf="@+id/leave4"
        app:layout_constraintStart_toStartOf="@+id/leave1"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/logOut"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/btt_profile"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/why"
        app:layout_constraintStart_toEndOf="@+id/why"
        app:layout_constraintTop_toTopOf="@+id/why">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/logout_nobg" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="@string/profile_logout"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/why"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/btt_profile"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/changelan"
        app:layout_constraintTop_toTopOf="@+id/changelan">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/why_nobg" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="@string/profile_why"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/changelan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-22dp"
        android:background="@drawable/btt_profile"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_progress">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/translate_nobg" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="@string/profile_changeLanguage"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

